@model BibliotecaMetropolis.Models.AutoresRecursos

@{
    ViewData["Title"] = "Asignar Autor a Recurso";
    
}

<div class="container my-5 text-glow-light">
    <h1 class="fw-bold text-glow-primary">
        <i class="bi bi-link-45deg me-2"></i> Asignar Autor a Recurso
    </h1>

    <h4 class="text-glow-success">
        Crear Vínculo de Contribución
    </h4>
    <hr class="glow-hr mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-futuristic p-4 card-zoom-sm">

                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h5 class="fw-bold text-glow-warning mb-3">Definir Relación</h5>

                    <div class="form-group mb-3">
                        <label asp-for="IdRec" class="control-label text-white fw-bold">Recurso (Libro/Artículo)</label>
                        <select asp-for="IdRec" class="form-control form-control-futuristic" asp-items="ViewBag.IdRec">
                            <option selected disabled>-- Seleccione un Recurso --</option>
                        </select>
                        <span asp-validation-for="IdRec" class="text-glow-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="IdAutor" class="control-label text-white fw-bold">Autor</label>
                        <select asp-for="IdAutor" class="form-control form-control-futuristic" asp-items="ViewBag.IdAutor">
                            <option selected disabled>-- Seleccione un Autor --</option>
                        </select>
                        <span asp-validation-for="IdAutor" class="text-glow-danger small"></span>
                    </div>

                    <div class="form-group form-check form-check-futuristic mb-5">
                        <input class="form-check-input check-futuristic" asp-for="EsPrincipal" type="checkbox" />
                        <label class="form-check-label text-white fw-bold" for="EsPrincipal">
                            <i class="bi bi-star-fill me-2 text-glow-light"></i> ¿@Html.DisplayNameFor(model => model.EsPrincipal)? (Marcar si es el autor principal)
                        </label>
                    </div>

                    <div class="form-group d-grid gap-2 mt-4">
                        <input type="submit" value="Crear Vínculo" class="btn btn-primary btn-futuristic" />
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="text-decoration-none text-glow-warning">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver a la Lista de Relaciones
        </a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}