@model BibliotecaMetropolis.Models.AutoresRecursos

@{
    ViewData["Title"] = "Editar Relación Autor-Recurso";
   
}

<div class="container my-5 text-glow-light">
    <h1 class="fw-bold text-glow-primary">
        <i class="bi bi-link-45deg me-2"></i> Editar Relación de Contribución
    </h1>

    <h4 class="text-glow-success">
        Modificar Autoría Principal
    </h4>
    <hr class="glow-hr mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-futuristic p-4 card-zoom-sm">

                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="IdRec" />
                    <input type="hidden" asp-for="IdAutor" />

                    <h5 class="fw-bold text-glow-warning mb-4">
                        Recurso: @(Model.Recurso?.Titulo ?? "N/A") | Autor: @(Model.Autor != null ? $"{Model.Autor.Nombres} {Model.Autor.Apellidos}" : "N/A")
                    </h5>

                    <div class="form-group form-check form-check-futuristic mb-5">
                        <input class="form-check-input check-futuristic" asp-for="EsPrincipal" type="checkbox" />
                        <label class="form-check-label text-white fw-bold" for="EsPrincipal">
                            <i class="bi bi-star-fill me-2 text-glow-light"></i> @Html.DisplayNameFor(model => model.EsPrincipal)
                        </label>
                    </div>

                    <div class="form-group d-grid gap-2 mt-4">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-futuristic" />
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="text-decoration-none text-glow-warning">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver a la Lista de Relaciones
        </a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}