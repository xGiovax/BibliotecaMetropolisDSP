@model IEnumerable<BibliotecaMetropolis.Models.AutoresRecursos>

@{
    ViewData["Title"] = "Gestión de Autores por Recurso";
    
}

<div class="container my-5 text-glow-light">

    <h1 class="fw-bold text-glow-primary mb-3">
        <i class="bi bi-link-45deg me-2"></i> Relación Autor-Recurso
    </h1>

    <h4 class="text-glow-success">
        Gestión de Contribuyentes
    </h4>
    <hr class="glow-hr mb-4" />


   
    <p class="mb-4">
        <a asp-action="Create" class="btn btn-futuristic btn-glow-success mb-4 text-white">
            <i class="bi bi-plus-circle me-1 text-white"></i> Asignar Autor a Recurso
        </a>
    </p>

    <div class="card card-futuristic p-4 table-responsive card-zoom-sm">

        <table class="table table-futuristic table-hover table-dark-blue">
            <thead>
                <tr>
                    <th>
                        Recurso
                    </th>
                    <th>
                        Autor
                    </th>
                    <th class="text-center">
                        Principal
                    </th>
                    <th class="text-center">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    // Asumimos que la clave primaria es una clave compuesta (IdRec e IdAutor)
                    var primaryKey = new { idRec = item.IdRec, idAutor = item.IdAutor };

                    <tr>
                        <td class="text-white fw-bold">
                            @Html.DisplayFor(modelItem => item.Recurso.Titulo)
                        </td>
                        <td class="text-white">
                            @($"{item.Autor.Nombres} {item.Autor.Apellidos}")
                        </td>
                        <td class="text-center">
                            @if (item.EsPrincipal)
                            {
                                <i class="bi bi-star-fill text-glow-warning" title="Autor Principal"></i>
                            }
                            else
                            {
                                <i class="bi bi-star text-muted" title="Autor Secundario"></i>
                            }
                        </td>

                        <td class="text-center actions-column">
                            <div class="btn-group btn-group-sm" role="group">

                                <a asp-action="Edit" asp-route-idRec="@primaryKey.idRec" asp-route-idAutor="@primaryKey.idAutor"
                                   class="btn btn-sm btn-outline-warning btn-icon-neoned"
                                   title="Editar Relación">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a asp-action="Details" asp-route-idRec="@primaryKey.idRec" asp-route-idAutor="@primaryKey.idAutor"
                                   class="btn btn-sm btn-outline-info btn-icon-neoned"
                                   title="Ver Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Delete" asp-route-idRec="@primaryKey.idRec" asp-route-idAutor="@primaryKey.idAutor"
                                   class="btn btn-sm btn-outline-danger btn-icon-neoned"
                                   title="Eliminar Relación">
                                    <i class="bi bi-trash"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="text-center text-muted p-5">
                <i class="bi bi-exclamation-octagon fs-3 text-glow-warning"></i>
                <p class="mt-3">No hay relaciones autor-recurso registradas.</p>
            </div>
        }

    </div>
</div>