@model BibliotecaMetropolis.Models.AutoresRecursos

@{
    ViewData["Title"] = "Eliminar Relación";
   
}

<div class="container my-5 text-glow-light">

    <h1 class="fw-bold text-glow-danger mb-3">
        <i class="bi bi-trash-fill me-2"></i> Eliminar Relación de Contribución
    </h1>

    <h3 class="text-glow-warning mb-4">
        ¿Está seguro que desea eliminar esta relación de autoría permanentemente?
    </h3>
    <hr class="glow-hr mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-futuristic p-4 card-zoom-sm">

                <div class="alert alert-danger-futuristic mb-4 p-3 text-center border-danger">
                    <h5 class="fw-bold text-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i> ¡ACCIÓN CRÍTICA! Esta operación es irreversible.</h5>
                    <p class="mb-0 small text-danger">Se eliminará el vínculo de **@(Model.Autor != null ? Model.Autor.Apellidos : "N/A")** con el recurso **@(Model.Recurso?.Titulo ?? "N/A")**.</p>
                </div>

                <h5 class="fw-bold text-glow-primary mb-4">Detalles del Vínculo a Eliminar</h5>

                <dl class="row detail-list-futuristic mb-4">

                    <dt class="col-sm-4 text-white text-glow-light">
                        @Html.DisplayNameFor(model => model.Recurso)
                    </dt>
                    <dd class="col-sm-8 text-white fw-bold">
                        @Html.DisplayFor(model => model.Recurso.Titulo)
                    </dd>

                    <dt class="col-sm-4 text-white text-glow-light">
                        @Html.DisplayNameFor(model => model.Autor)
                    </dt>
                    <dd class="col-sm-8 text-white">
                        @(Model.Autor != null ? $"{Model.Autor.Nombres} {Model.Autor.Apellidos}" : "N/A")
                    </dd>

                    <dt class="col-sm-4  text-white text-glow-light">
                        @Html.DisplayNameFor(model => model.EsPrincipal)
                    </dt>
                    <dd class="col-sm-8 text-white">
                        @if (Model.EsPrincipal)
                        {
                            <span class="badge text-bg-warning-futuristic fw-bold"><i class="bi bi-star-fill me-1"></i> Sí, es Principal</span>
                        }
                        else
                        {
                            <span class="badge text-bg-secondary-futuristic"><i class="bi bi-person-fill me-1"></i> No, es Contribuyente</span>
                        }
                    </dd>

                </dl>

                <hr class="glow-hr my-4" />

                <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                    <input type="hidden" asp-for="IdRec" />
                    <input type="hidden" asp-for="IdAutor" />

                    <button type="submit" value="Delete" class="btn btn-danger btn-futuristic-danger px-4">
                        <i class="bi bi-trash-fill me-2"></i> Confirmar Eliminación
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-futuristic-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i> Cancelar y Volver
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>