@model BibliotecaMetropolis.Models.Autor

@{
    ViewData["Title"] = "Eliminar Autor";
    
}

<div class="container my-5 text-glow-light">

    <h1 class="fw-bold text-glow-danger mb-3">
        <i class="bi bi-person-x-fill me-2"></i> Eliminar Autor
    </h1>

    <h3 class="text-glow-warning mb-4">
        ¿Está seguro que desea eliminar a este autor permanentemente?
    </h3>
    <hr class="glow-hr mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-futuristic p-4 card-zoom-sm">

                <div class="alert alert-danger-futuristic mb-4 p-3 text-center border-danger">
                    <h5 class="fw-bold text-danger"><i class="bi bi-exclamation-triangle-fill me-2"></i> ¡ADVERTENCIA! Esta acción es irreversible.</h5>
                    <p class="mb-0 small text-danger">Eliminar a **@Model.Nombres @Model.Apellidos** podría afectar recursos asociados.</p>
                </div>

                <h5 class="fw-bold text-glow-primary mb-4">Datos del Autor a Eliminar</h5>

                <dl class="row detail-list-futuristic mb-4">

                    <dt class="col-sm-3 text-white text-glow-light">
                        @Html.DisplayNameFor(model => model.Nombres)
                    </dt>
                    <dd class="col-sm-9 text-white fw-bold">
                        @Html.DisplayFor(model => model.Nombres)
                    </dd>

                    <dt class="col-sm-3 text-white  text-glow-light">
                        @Html.DisplayNameFor(model => model.Apellidos)
                    </dt>
                    <dd class="col-sm-9 text-white fw-bold">
                        @Html.DisplayFor(model => model.Apellidos)
                    </dd>

                </dl>

                <hr class="glow-hr my-4" />

                <form asp-action="Delete" class="d-flex justify-content-center gap-3">
                    <input type="hidden" asp-for="IdAutor" />

                    <button type="submit" class="btn btn-danger btn-futuristic-danger px-4">
                        <i class="bi bi-trash-fill me-2"></i> Confirmar Eliminación
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-futuristic-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i> Cancelar y Volver
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>