<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca Metrópolis</title>
    <!-- CSS de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Íconos de Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>


    <style>
        :root {
            /* Paleta de colores de neón */
            --glow-primary: #00f2ff94;
            --glow-success: #00ff8a;
            --glow-warning: #ffeb3b;
            --glow-danger: #ff2d6d;
            --dark-bg: #011116; /* Fondo púrpura oscuro */
        }

        body {
            background-color: var(--dark-bg);
            color: #dcdcf0; /* Color de texto base claro */
        }

        /* --- Sección de bienvenida --- */

        .text-glow-primary {
            color: var(--glow-primary);
            text-shadow: 0 0 8px var(--glow-primary), 0 0 12px var(--glow-primary);
        }

        .lead {
            color: #a0a0c0; /* Un color más suave para el subtítulo */
        }

        hr.glow-hr {
            border: 0;
            height: 1px;
            background: linear-gradient(to right, transparent, var(--glow-primary), transparent);
            opacity: 0.75;
        }

        /* --- Tarjetas con efecto "Glassmorphism" --- */

        .card-futuristic {
            /* El efecto de cristal */
            background: rgba(255, 255, 255, 0.05); /* 5% opacidad blanca */
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px); /* Para Safari */
            border: 1px solid rgba(255, 255, 255, 0.1); /* Borde sutil */
            border-radius: 1rem; /* Esquinas más redondeadas */
            /* Sombra para dar profundidad */
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
            /* Transición para el hover */
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
        }

        .card-zoom:hover {
            transform: scale(1.04) translateY(-5px);
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.4);
            border-color: rgba(255, 255, 255, 0.3);
        }

        /* --- Iconos y Botones de Neón --- */

        /* Clases de brillo para íconos */
        .icon-glow-primary {
            color: var(--glow-primary);
            text-shadow: 0 0 15px var(--glow-primary);
        }

        .icon-glow-success {
            color: var(--glow-success);
            text-shadow: 0 0 15px var(--glow-success);
        }

        .icon-glow-warning {
            color: var(--glow-warning);
            text-shadow: 0 0 15px var(--glow-warning);
        }

        .icon-glow-danger {
            color: var(--glow-danger);
            text-shadow: 0 0 15px var(--glow-danger);
        }

        .card-futuristic h5 {
            color: #ffffff; /* Títulos de tarjeta en blanco puro */
        }

        .card-futuristic .text-muted {
            color: #a0a0c0 !important; /* Descripción más clara */
        }

        /* Redefinir los botones outline */
        .btn-outline-primary {
            color: var(--glow-primary);
            border-color: var(--glow-primary);
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background-color: var(--glow-primary);
                color: var(--dark-bg);
                border-color: var(--glow-primary);
                box-shadow: 0 0 15px var(--glow-primary);
            }

        .btn-outline-success {
            color: var(--glow-success);
            border-color: var(--glow-success);
            transition: all 0.3s ease;
        }

            .btn-outline-success:hover {
                background-color: var(--glow-success);
                color: var(--dark-bg);
                border-color: var(--glow-success);
                box-shadow: 0 0 15px var(--glow-success);
            }

        .btn-outline-warning {
            color: var(--glow-warning);
            border-color: var(--glow-warning);
            transition: all 0.3s ease;
        }

            .btn-outline-warning:hover {
                background-color: var(--glow-warning);
                color: var(--dark-bg);
                border-color: var(--glow-warning);
                box-shadow: 0 0 15px var(--glow-warning);
            }

        .btn-outline-danger {
            color: var(--glow-danger);
            border-color: var(--glow-danger);
            transition: all 0.3s ease;
        }

            .btn-outline-danger:hover {
                background-color: var(--glow-danger);
                color: var(--dark-bg);
                border-color: var(--glow-danger);
                box-shadow: 0 0 15px var(--glow-danger);
            }


        /* ------------------------------------------- */
        /* --- TABLA FUTURISTA MEJORADA --- */
        /* ------------------------------------------- */

        .table-futuristic {
            --bs-table-bg: #0f0a20; /* Fondo más oscuro para la tabla */
            --bs-table-color: #e0e0f0; /* Color de texto claro */
            border: 1px solid rgba(0, 242, 255, 0.2); /* Borde sutil cian */
            border-radius: 0.75rem; /* Bordes más redondeados */
            overflow: hidden; /* Asegura que los bordes redondeados se apliquen bien */
            box-shadow: 0 0 20px rgba(0, 242, 255, 0.15); /* Sombra de brillo cian sutil */
        }

        /* Encabezado */
        .table-header-futuristic {
            background-color: #1a0f30; /* Fondo oscuro ligeramente diferente */
            color: var(--glow-primary); /* Cian neón para el texto del encabezado */
            font-weight: bold;
            border-bottom: 2px solid var(--glow-primary); /* Borde inferior de neón */
            /* Añadir algo de padding para mayor legibilidad */
        }

        .table-futuristic th {
            padding: 1rem 0.75rem; /* Más espacio en los encabezados */
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-size: 0.85rem;
        }

        /* Filas del cuerpo */
        .table-futuristic tbody tr {
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
        }

            /* Filas alternas para mejor legibilidad */
            .table-futuristic tbody tr:nth-child(even) {
                background-color: rgba(255, 255, 255, 0.03); /* Un poco más claro */
            }

            .table-futuristic tbody tr:nth-child(odd) {
                background-color: rgba(0, 0, 0, 0.1); /* Un poco más oscuro */
            }


            .table-futuristic tbody tr:hover {
                background-color: rgba(0, 242, 255, 0.08); /* Brillo cian al pasar el ratón */
                box-shadow: inset 0 0 10px rgba(0, 242, 255, 0.2); /* Brillo interno */
                transform: scale(1.005); /* Muy ligero zoom */
            }

        /* Celdas individuales */
        .table-futuristic td {
            padding: 0.8rem 0.75rem; /* Padding para las celdas de datos */
            border-top: 1px solid rgba(255, 255, 255, 0.08); /* Líneas divisorias sutiles */
        }

        /* Estilos específicos para texto dentro de la tabla */
        .table-futuristic .text-glow-primary {
            color: var(--glow-primary) !important;
            text-shadow: 0 0 5px rgba(0, 242, 255, 0.5); /* Brillo más sutil para el título */
            font-weight: 500;
        }

        .table-futuristic .text-glow-warning {
            color: var(--glow-warning) !important;
            text-shadow: 0 0 4px rgba(255, 235, 59, 0.4);
        }

        .table-futuristic .text-white { /* Asegura que otros textos blancos sean visibles */
            color: #ffffff !important;
        }

        .table-futuristic .text-muted {
            color: #a0a0c0 !important; /* Un gris más claro */
        }

        /* Autores en la tabla */
        .autores-list span {
            display: block;
            margin-bottom: 2px;
            font-size: 0.85rem;
        }

        .table-futuristic tbody tr:hover {
            background-color: rgba(0, 242, 255, 0.12); /* Fondo cian muy sutilmente más claro */
            box-shadow: inset 0 0 10px rgba(0, 242, 255, 0.2);
            transform: scale(1.005);
        }

        /* Ajuste para la descripción */
        .table-futuristic td[title] {
            cursor: help; /* Indica que hay más texto */
        }


        /* ------------------------------------------- */
        /* --- Botones de Acción de Neón (Editar, Detalle, Eliminar) en la Tabla --- */
        /* ------------------------------------------- */

        .btn-icon-neoned {
            padding: 0.3rem 0.6rem; /* Un poco más grandes */
            margin: 0 2px;
            border-radius: 0.3rem;
            font-size: 0.9rem; /* Iconos un poco más grandes */
            display: inline-flex; /* Para centrar el icono */
            align-items: center;
            justify-content: center;
            line-height: 1; /* Eliminar espacio extra */
            transition: all 0.2s ease-in-out;
        }

            /* Ajustes de hover para los botones de acción */
            .btn-icon-neoned.btn-outline-warning:hover {
                background-color: var(--glow-warning);
                color: var(--dark-bg);
                box-shadow: 0 0 10px var(--glow-warning);
                border-color: var(--glow-warning);
            }

            .btn-icon-neoned.btn-outline-info { /* Para el botón de detalles */
                color: #00bcd4; /* Un cian diferente al primary */
                border-color: #00bcd4;
            }

                .btn-icon-neoned.btn-outline-info:hover {
                    background-color: #00bcd4;
                    color: var(--dark-bg);
                    box-shadow: 0 0 10px #00bcd4;
                    border-color: #00bcd4;
                }

            .btn-icon-neoned.btn-outline-danger:hover {
                background-color: var(--glow-danger);
                color: var(--dark-bg);
                box-shadow: 0 0 10px var(--glow-danger);
                border-color: var(--glow-danger);
            }

        /* Espaciado para la columna de acciones */
        .table-futuristic td:last-child {
            white-space: nowrap; /* Evita que los botones se envuelvan */
            padding: 1.2rem 1.0rem;
            border-top: 1px solid rgba(255, 255, 255, 0.08);
        }
    </style>
</head>
<body>
    <!-- Layout principal -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand text-light d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill me-2 fs-4"></i> Biblioteca Metrópolis
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Recurso" asp-action="Index">Recursos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Autor" asp-action="Index">Autores</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Editorial" asp-action="Index">Editoriales</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="TipoRecurso" asp-action="Index">Tipos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Pais" asp-action="Index">Países</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Info" asp-action="SobreNosotros">Acerca de nosotros</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
     
    <main class="flex-shrink-0 mt-4 mb-5">

        <div class="container">
            @RenderBody()
        </div>
    </main>
  
    <footer class="text-center py-3 border-top shadow-sm">
        <p >
        <br>
            © 2025 <strong>Biblioteca Metrópolis</strong> — Desarrollado por 
            <strong>Quantum</strong>
        </p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
