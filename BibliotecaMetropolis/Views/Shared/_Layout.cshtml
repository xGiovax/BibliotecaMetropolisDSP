<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca Metrópolis</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <!-- Estilos globales -->
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BibliotecaMetropolis.styles.css" asp-append-version="true" />

    <!-- Fuente elegante -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #1e3c72, #2a5298);
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .nav-link {
            color: #e2e6ea !important;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: #fff !important;
            text-shadow: 0 0 4px rgba(255, 255, 255, 0.6);
        }

        /* Footer */
        footer {
            background-color: #f8f9fa;
            color: #6c757d;
            font-size: 0.9rem;
        }

        footer strong {
            color: #2a5298;
        }
    </style>
</head>
<body>
    <!-- Layout principal -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand text-light d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill me-2 fs-4"></i> Biblioteca Metrópolis
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Recurso" asp-action="Index">Recursos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Autor" asp-action="Index">Autores</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Editorial" asp-action="Index">Editoriales</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="TipoRecurso" asp-action="Index">Tipos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Pais" asp-action="Index">Países</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0 mt-4 mb-5">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="text-center py-3 border-top shadow-sm">
        <p class="mb-0">
            © 2025 <strong>Biblioteca Metrópolis</strong> — Desarrollado por 
            <strong>Giovanni Alberto Ruano Martínez (RM250065)</strong>
        </p>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
