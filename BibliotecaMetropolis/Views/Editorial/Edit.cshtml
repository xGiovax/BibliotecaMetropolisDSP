@model BibliotecaMetropolis.Models.Editorial

@{
    ViewData["Title"] = "Editar Editorial";
    
}

<div class="container my-5 text-glow-light">
    <h1 class="fw-bold text-glow-primary">
        <i class="bi bi-pencil-square me-2"></i> Editar Editorial
    </h1>

    <h4 class="text-glow-success">
        Catálogo de Distribuidores
    </h4>
    <hr class="glow-hr mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-futuristic p-4 card-zoom-sm">

                <form asp-action="Edit">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="IdEdit" />

                    <h5 class="fw-bold text-glow-warning mb-3">Datos de la Editorial</h5>

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="control-label text-white fw-bold"></label>
                        <input asp-for="Nombre" class="form-control form-control-futuristic" />
                        <span asp-validation-for="Nombre" class="text-glow-danger small"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Descripcion" class="control-label text-white fw-bold"></label>
                        <textarea asp-for="Descripcion" class="form-control form-control-futuristic" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-glow-danger small"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-4">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-futuristic" />
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="text-decoration-none text-glow-warning">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver a la Lista de Editoriales
        </a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}